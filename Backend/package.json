{
  "name": "movie-recommendation-backend",
  "version": "1.0.0",
  "description": "Movie recommendation and suggestion backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "sequelize-cli db:migrate",
